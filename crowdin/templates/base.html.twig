<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
    {% block stylesheets %}
    {% endblock %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">

    {% block javascripts %}
        {% block importmap %}{{ importmap('app') }}{% endblock %}
    {% endblock %}
</head>
<body>

{% block Navbar %}
<nav class="navbar navbar-expand-lg bg-body-tertiary">
    <div class="container-fluid">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                {% if app.user %}
                    {% if app.user.typeProfil == 'chef de projet' or app.user.typeProfil == 'les deux' %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('projet') }}">Création de Projet</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('getprojet') }}">Projets</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('getsource') }}">Liste des sources</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('source') }}">Creation source</a>
                        </li>
                         <li class="nav-item">
                            <a class="nav-link" href="{{ path('profil') }}">Profil</a>
                        </li>
                         <li class="nav-item">
                            <a class="nav-link" href="{{ path('getusers') }}">Traducteurs</a>
                          </li>
                    {% endif %}
                    {% if app.user.typeProfil == 'traducteur' %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('profil') }}">Profil</a>
                        </li>
                          <li class="nav-item">
                            <a class="nav-link" href="{{ path('getranslate') }}">Traduction</a>
                        </li>
                    {% endif %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('logout') }}">Déconnexion</a>
                    </li>
                {% else %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('login') }}">Connexion</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('register') }}">Inscription</a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>
{% endblock %}

{% block body %}{% endblock %}

<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
</body>
</html>
