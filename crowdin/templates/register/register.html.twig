{% extends "base.html.twig" %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <section class="vh-100 bg-image" style="background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp');">
        <div class="mask d-flex align-items-center h-100 gradient-custom-3">
            <div class="container h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                        <div class="card" style="border-radius: 15px;">
                            <div class="card-body p-5">
                                <h2 class="text-uppercase text-center mb-5">Crer son compte</h2>

                                <form action="{{ path('register') }}" method="post">

                                    <div class="form-outline mb-4">
                                        {{ form_row(form.prenom, {'attr': {'class': 'form-control form-control-lg', 'id': 'form3Example1cg'}}) }}
    
                                    </div>

                                    <div class="form-outline mb-4">
                                        {{ form_row(form.nom, {'attr': {'class': 'form-control form-control-lg', 'id': 'form3Example2cg'}}) }}
   
                                    </div>

                                    <div class="form-outline mb-4">
                                        {{ form_row(form.email, {'attr': {'class': 'form-control form-control-lg', 'id': 'form3Example3cg'}}) }}

                                    </div>

                                    <div class="form-outline mb-4">
                                        {{ form_row(form.password.first, {'attr': {'class': 'form-control form-control-lg', 'id': 'form3Example4cg'}}) }}
   
                                    </div>

                                    <div class="form-outline mb-4">
                                        {{ form_row(form.password.second, {'attr': {'class': 'form-control form-control-lg', 'id': 'form3Example5cg'}}) }}

                                    </div>

                                    <div class="form-outline mb-4">
                                        {{ form_row(form.typeProfil, {'attr': {'class': 'form-control form-control-lg', 'id': 'form3Example6cg'}}) }}
                                    </div>


                                    <div class="d-flex justify-content-center">
                                        <button type="submit" class="btn btn-success btn-block btn-lg gradient-custom-4 text-body">S"enregistrer</button>
                                    </div>

                                   <p class="text-center text-muted mt-5 mb-0">Déjà un compte? <a href="{{ path('login') }}" class="fw-bold text-body"><u>Se connecter</u></a></p>


                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
